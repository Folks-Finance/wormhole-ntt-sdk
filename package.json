{
  "name": "@folks-finance/wormhole-ntt-sdk",
  "version": "0.0.6",
  "description": "JavaScript SDK for Wormhole NTT Bridge",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Folks-Finance/wormhole-ntt-sdk.git"
  },
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepare": "husky",
    "commit": "cz",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write .",
    "formatcheck": "prettier --check .",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "release": "pnpm build && changeset publish"
  },
  "dependencies": {
    "@algorandfoundation/algokit-utils": "^9.1.2",
    "@txnlab/use-wallet": "4.3.1",
    "@wormhole-foundation/sdk": "^4.0.2",
    "algosdk": "^3.5.2",
    "viem": "^2.40.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/parser": "^8.48.0",
    "commitizen": "^4.3.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^0.5.3",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "keywords": [
    "folks-finance",
    "cross-chain",
    "wormhole",
    "ntt",
    "algorand",
    "evm"
  ],
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
